{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "sourceMap": false,
    "outDir": "./lib",
    "declaration": true,
    "jsx": "react",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx" ,
    "./test/test-utils/**/*.ts",
    "./test/test-utils/**/*.tsx",
  ],
}
